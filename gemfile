# Die Gemfile für dein Jekyll-Projekt

source "https://rubygems.org"

# Jekyll selbst
gem "jekyll", "~> 4.2.2"  # Stelle sicher, dass dies mit deiner Jekyll-Version übereinstimmt

# Bundler zur Verwaltung von Gems
gem "bundler", "~> 2.2"

# Gallery-Generator Plugin für Jekyll
gem "jekyll-gallery-generator", "~> 0.3.0"  # Stelle sicher, dass dies mit der Version des Plugins übereinstimmt

# Optional: Weitere Plugins für spezielle Funktionen
gem "jekyll-feed", "~> 0.12"  # RSS-Feed-Generator für Jekyll
gem "jekyll-seo-tag", "~> 2.8"  # SEO-Tag-Generator für Jekyll

# Entwicklungs-Gems (wird nur lokal verwendet, nicht auf GitHub Pages benötigt)
group :development do
  gem "jekyll-admin", "~> 0.11"  # Admin-Bereich für Jekyll
end
